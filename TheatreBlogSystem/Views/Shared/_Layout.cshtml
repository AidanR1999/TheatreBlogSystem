@using System.Data.Entity
@using System.Web.Services.Description

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/allusers")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap core CSS -->
    <link href="/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="/Content/css/clean-blog.min.css" rel="stylesheet">

</head>
<body>
    <nav>
        <div class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a href='@Url.Action("Index", "Home")'>
                    <img src='@Url.Content("~/Content/img/Local_Theatre_Company_Logo_white.png")' width="300px" height="100px" />
                </a>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Blog", "ViewPosts", "Posts", new { area = "" }, new { @class = "navbar-brand" })</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown" data-admin-menu>
                                <a href="#" class="navbar-brand">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/Views/Categories/Index.cshtml">&nbsp;&nbsp;Category</a></li>
                                    <li><a href="/Views/Posts/Index.cshtml">&nbsp;&nbsp;Post</a></li>
                                    <li><a href="/Views/Manage/Index.cshtml">&nbsp;&nbsp;Users</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>

<div class="body-content">
    @RenderBody()
    <hr/>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <p class="copyright text-muted">Copyright &copy; Local Theatre Company @DateTime.Now.Year</p>
                </div>
            </div>
        </div>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/admin")
@RenderSection("Scripts", required: false)

<!-- Bootstrap core JavaScript -->
<script src="/Content/vendor/jquery/jquery.min.js"></script>
<script src="/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Custom scripts for this template -->
<script src="/Content/js/clean-blog.min.js"></script>

</body>
</html>
