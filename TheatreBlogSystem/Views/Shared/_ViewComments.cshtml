@model IEnumerable<TheatreBlogSystem.Models.Comment>

@foreach (var comment in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                        <h2 class="post-title">
                            @comment.Body
                        </h2>
                    <p class="post-meta">
                        Posted by
                        <a href="#">@comment.User.Forename @comment.User.Surname</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
}

