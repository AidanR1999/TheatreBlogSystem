@model TheatreBlogSystem.ViewModels.PostsViewModel

@{
    ViewBag.Title = "View Posts";
}

<!--Header-->
<header class="masthead" style="background-image: url('/Content/img/theatre_performance.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>All Posts</h1>
                </div>
            </div>
        </div>
    </div>
</header>

@foreach (var Post in Model.Posts)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <a href="@Html.Raw(Url.Action("PostDetails", "Posts", new { postId = Post.PostId }))">
                        <h2 class="post-title">
                            @Post.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @Post.Category.Name
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#">@Post.Staff.Forename @Post.Staff.Surname</a>
                        on @Post.DatePublished
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Bootstrap core JavaScript -->
<script src="/Scripts/jquery-3.3.1.min.js"></script>
<script src="/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Custom scripts for this template -->
<script src="/Content/js/clean-blog.min.js"></script>


